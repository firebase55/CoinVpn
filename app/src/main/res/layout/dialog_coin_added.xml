<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/rounded_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/coin_bonus"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"/>
    </RelativeLayout>

    <TextView
        android:text="Congratulation on receiving reward point"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Menu"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/avenir_medium"
        android:textSize="@dimen/_15sdp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lbl_coins"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:text="+80 Coins"
        android:textSize="@dimen/_17sdp"
        android:textColor="@color/colorOrange"
        android:fontFamily="@font/avenir_heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Reward coins are used to select the server. You will be deducted with paid server price after connection completion"
        android:gravity="center"
        android:fontFamily="@font/avenir_medium"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>