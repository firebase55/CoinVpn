<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AboutUsActivity">
    <RelativeLayout
        android:id="@+id/rel_custom_actionbar"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:src="@drawable/icon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_20sdp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rel_custom_actionbar"
        android:layout_above="@id/rel_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/splash_icon"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"/>
                <TextView
                    android:fontFamily="@font/avenir_heavy"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/lbl_app_version"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/avenir_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Latest Version"
                    android:fontFamily="@font/avenir_medium"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="#80808080"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:id="@+id/lbl_alwayson_vpn"
                android:text="Always-on VPN"
                style="@style/TextAppearance.AppCompat.Menu"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/avenir_medium"
                android:padding="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="#80808080"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:id="@+id/lbl_give_us_five_star"
                android:text="Give Us 5 Star"
                style="@style/TextAppearance.AppCompat.Menu"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/avenir_medium"
                android:padding="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="#80808080"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:id="@+id/lbl_help_us"
                android:text="Help Us"
                style="@style/TextAppearance.AppCompat.Menu"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/avenir_medium"
                android:padding="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="#80808080"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:id="@+id/lbl_share_app"
                android:text="Share App"
                style="@style/TextAppearance.AppCompat.Menu"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/avenir_medium"
                android:padding="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="#80808080"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
        </LinearLayout>
    </ScrollView>
    <com.A_Developer.CoinVpn.ads.BannerAdView
        android:id="@+id/rel_banner"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</RelativeLayout>