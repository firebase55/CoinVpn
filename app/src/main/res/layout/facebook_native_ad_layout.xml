<?xml version="1.0" encoding="utf-8"?>
<com.facebook.ads.NativeAdLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_ad_container"
    android:layout_margin="@dimen/_8sdp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_250sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.ads.MediaView
                    android:id="@+id/img_ad_icon"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"/>
                <LinearLayout
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_ad_title"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lbl_ad_sponsored"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_ad_choices_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"/>
            </LinearLayout>
            <com.facebook.ads.MediaView
                android:id="@+id/media_view_main"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"/>
            <RelativeLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_toStartOf="@id/btn_ad_call_action"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_ad_social_context"
                        android:lines="1"
                        style="@style/TextAppearance.AppCompat.Menu"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lbl_ad_body"
                        android:lines="2"
                        android:ellipsize="end"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_ad_call_action"
                    android:background="@drawable/rounded_green_button"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
</com.facebook.ads.NativeAdLayout>