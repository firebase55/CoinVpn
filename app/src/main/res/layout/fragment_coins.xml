<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CoinsFragment">
    <RelativeLayout
        android:id="@+id/rel_custom_actionbar"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:src="@drawable/icon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_20sdp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rel_custom_actionbar"
        android:layout_above="@id/rel_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@drawable/rounded_primary_border"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/wallet_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"/>
                        <TextView
                            android:id="@+id/lbl_apps_tools"
                            style="@style/TextAppearance.AppCompat.Menu"
                            android:text="Wallet"
                            android:fontFamily="@font/avenir_heavy"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:background="@drawable/rounded_primary_border"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:orientation="vertical"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:src="@drawable/coins"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"/>
                                    <TextView
                                        android:id="@+id/lbl_current_coin"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="@dimen/_18sdp"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/black"
                                        android:fontFamily="@font/avenir_heavy"
                                        android:text="480"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            <TextView
                                android:text="Current Coins"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/avenir_medium"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp"
                                android:background="@drawable/bottom_rounded_primary"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:background="@drawable/rounded_primary_border"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/coins"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"/>
                                <TextView
                                    android:id="@+id/lbl_recieved_today_coins"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/_18sdp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/avenir_heavy"
                                    android:text="480"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <TextView
                                android:text="Received Today"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/avenir_medium"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp"
                                android:background="@drawable/bottom_rounded_primary"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_spin"
                        android:src="@drawable/spin_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:id="@+id/lbl_spin"
                        android:text="Spin To Win Coins"
                        android:fontFamily="@font/avenir_medium"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@android:color/black"
                        android:layout_toEndOf="@id/img_spin"
                        android:layout_toStartOf="@id/btn_spin"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_spin"
                        android:layout_toStartOf="@id/img_open_spin"
                        android:layout_centerVertical="true"
                        android:text="Spin"
                        android:fontFamily="@font/avenir_medium"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_primary"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_25sdp"/>
                    <ImageView
                        android:id="@+id/img_open_spin"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/open_it" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_daily_check_in"
                        android:src="@drawable/daily_check_in"
                        android:fontFamily="@font/avenir_heavy"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:id="@+id/lbl_daily_check_in"
                        android:text="Daily Check-in"
                        android:fontFamily="@font/avenir_medium"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@android:color/black"
                        android:layout_toEndOf="@id/img_daily_check_in"
                        android:layout_toStartOf="@id/btn_check_in"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_check_in"
                        android:layout_toStartOf="@id/img_open_daily_check_in"
                        android:layout_centerVertical="true"
                        android:text="Check - in"
                        android:fontFamily="@font/avenir_medium"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_primary"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_25sdp"/>

                    <ImageView
                        android:id="@+id/img_open_daily_check_in"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/open_it" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_invite_friend"
                        android:src="@drawable/invite_friend"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:id="@+id/lbl_invite_friend"
                        android:text="Invite Friend"
                        android:fontFamily="@font/avenir_medium"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@android:color/black"
                        android:layout_toEndOf="@id/img_invite_friend"
                        android:layout_toStartOf="@id/btn_invite_friend"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_invite_friend"
                        android:layout_toStartOf="@id/img_open_invite_friend"
                        android:layout_centerVertical="true"
                        android:text="+80 Coins"
                        android:fontFamily="@font/avenir_medium"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_primary"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_25sdp"/>
                    <ImageView
                        android:id="@+id/img_open_invite_friend"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/open_it" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_watch_video"
                        android:src="@drawable/watch_video"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:id="@+id/lbl_watch_video"
                        android:text="Watch video to get coins"
                        android:fontFamily="@font/avenir_medium"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@android:color/black"
                        android:layout_toEndOf="@id/img_watch_video"
                        android:layout_toStartOf="@id/btn_watch_video"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_watch_video"
                        android:layout_toStartOf="@id/img_open_watch_video"
                        android:layout_centerVertical="true"
                        android:text="+150 Coins"
                        android:fontFamily="@font/avenir_medium"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_primary"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_25sdp"/>
                    <ImageView
                        android:id="@+id/img_open_watch_video"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/open_it" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_tap_to_coin"
                        android:src="@drawable/tap_to_get_coin"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:id="@+id/lbl_tap_to_coin"
                        android:text="Tap to get coins"
                        android:fontFamily="@font/avenir_medium"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@android:color/black"
                        android:layout_toEndOf="@id/img_tap_to_coin"
                        android:layout_toStartOf="@id/btn_tap_to_coin"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_tap_to_coin"
                        android:layout_toStartOf="@id/img_open_tap_to_get_coin"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/avenir_medium"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_primary"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_25sdp"/>

                    <ImageView
                        android:id="@+id/img_open_tap_to_get_coin"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/open_it" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.A_Developer.CoinVpn.ads.BannerAdView
        android:id="@+id/rel_banner"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center_horizontal|center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</RelativeLayout>