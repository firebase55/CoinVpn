<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rel_custom_actionbar"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:src="@drawable/icon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_20sdp"/>
        <RelativeLayout
            android:id="@+id/rel_country_name_container"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_grey_border"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_country_flag"
                android:padding="0dp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:id="@+id/lbl_country_name"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/lbl_country_flag"
                android:fontFamily="@font/avenir_medium"
                style="@style/TextAppearance.AppCompat.Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_more"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/lbl_country_name"
                android:src="@drawable/drop_it"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rel_custom_actionbar"
        android:layout_above="@id/rel_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_connect_container"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_connect"
                    android:layout_centerInParent="true"
                    android:src="@drawable/connect"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"/>
                <TextView
                    android:id="@+id/lbl_connection_status"
                    android:text="Connected"
                    android:layout_below="@id/img_connect"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/avenir_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_threat"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_threat_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_note_first"
                            android:fontFamily="@font/avenir_medium"
                            android:text="Your Ip &amp; Network are exposed to an unsafe server."
                            android:textColor="@android:color/black"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/img_threat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/img_threat"
                            android:src="@drawable/close"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/colorBackground"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>
                    <RelativeLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_note_second"
                            android:text="Your Data is not encrypted and unsafe."
                            android:fontFamily="@font/avenir_medium"
                            android:textColor="@android:color/black"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/img_threat1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/img_threat1"
                            android:src="@drawable/close"
                            android:layout_alignParentEnd="true"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:background="@drawable/rounded_primary_border"
                android:layout_margin="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_apps_tools"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:text="Apps Tools"
                    android:fontFamily="@font/avenir_heavy"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_below="@id/lbl_apps_tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:gravity="center|center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:background="@drawable/rounded_primary_border"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/check_ip"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"/>
                            <Button
                                android:id="@+id/btn_check_ip"
                                android:text="Check IP"
                                android:textColor="@android:color/white"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/avenir_medium"
                                android:background="@drawable/bottom_rounded_primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/rounded_primary_border"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/settings"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"/>
                            <Button
                                android:id="@+id/btn_setting"
                                android:text="Settings"
                                android:fontFamily="@font/avenir_medium"
                                android:textColor="@android:color/white"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_10sdp"
                                android:background="@drawable/bottom_rounded_primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:gravity="center|center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:background="@drawable/rounded_primary_border"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/network_protector"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"/>
                            <Button
                                android:id="@+id/btn_network_protector"
                                android:text="Network Protector"
                                android:textColor="@android:color/white"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/avenir_medium"
                                android:background="@drawable/bottom_rounded_primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/rounded_primary_border"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/network_optimize"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"/>
                            <Button
                                android:id="@+id/btn_network_optimize"
                                android:text="Network Optimize"
                                android:fontFamily="@font/avenir_medium"
                                android:textColor="@android:color/white"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_10sdp"
                                android:background="@drawable/bottom_rounded_primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/rounded_primary_border"
                android:layout_margin="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@drawable/reward_today"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp">
                    <LinearLayout
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            style="@style/TextAppearance.AppCompat.Menu"
                            android:text="Reward Today"
                            android:fontFamily="@font/avenir_heavy"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="X4 Point By Watching Video Ads"
                                android:fontFamily="@font/avenir_medium"
                                style="@style/TextAppearance.AppCompat.Menu"
                                android:gravity="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/btn_get_reward"
                                android:text="Get Reward"
                                android:fontFamily="@font/avenir_heavy"
                                android:textColor="@android:color/white"
                                android:background="@drawable/rounded_primary"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingEnd="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_35sdp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/rounded_primary_border"
                android:layout_margin="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/rounded_primary_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/rate"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"/>
                        <Button
                            android:id="@+id/btn_rate_us"
                            android:text="Give Us 5 Star"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/avenir_medium"
                            android:background="@drawable/bottom_rounded_primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/rounded_primary_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/share"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"/>
                        <Button
                            android:id="@+id/btn_share_app"
                            android:text="Share App"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/avenir_medium"
                            android:background="@drawable/bottom_rounded_primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.A_Developer.CoinVpn.ads.BannerAdView
        android:id="@+id/rel_banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center|center_horizontal" />
</RelativeLayout>



